<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Dark.Dialog.Info</item>
    </style>

    <style name="txt_login">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="txt_label">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginBottom">@dimen/padding_10</item>
        <item name="android:layout_marginTop">@dimen/padding_10</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="edt_fields">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="AppTheme.Dark.Dialog.Info" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/primary</item>
    </style>
    <style name="AppTheme.Dark.Dialog.Error" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/primary_error</item>
    </style>
    <style name="AppTheme.Dark.Dialog.Success" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/primary_success</item>
    </style>
    <style name="AppTheme.Dark.Dialog.Alert" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/primary_alert</item>
    </style>

</resources>
